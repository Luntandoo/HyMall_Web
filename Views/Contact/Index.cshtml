@model HyMall_App.Models.ContactForm

@{
    ViewData["Title"] = "Contact Us – HyMall";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        /* ===== NAVBAR LINKS: ONLY HIGHLIGHT HOVERED LINK ===== */
        .nav-links a {
            text-decoration: none;
            color: #333;
            font-weight: 500;
        }

            .nav-links a:hover {
                color: #651FFF;
            }

        /* ===== CONTACT PAGE STYLES ===== */
        .contact-page {
            padding: 60px 20px;
            background: #fff;
        }

        .contact-container {
            display: flex;
            gap: 40px;
            max-width: 1200px;
            margin: 0 auto;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .contact-info {
            flex: 0 0 360px;
            background: linear-gradient(135deg, #EBEDFF, #EDEEFD, #DBF8FF);
            padding: 40px 30px;
            border-radius: 16px;
            position: relative;
            overflow: hidden;
            box-shadow: 0 4px 12px rgba(101, 31, 255, 0.08);
        }

            .contact-info::before {
                content: "";
                position: absolute;
                bottom: -90px;
                right: -90px;
                width: 300px;
                height: 300px;
                background: url('/images/circle-gradient.png') no-repeat center center;
                background-size: contain;
                opacity: 0.95;
                z-index: 0;
            }

        .info-content {
            position: relative;
            z-index: 1;
            color: #2d2d2d;
        }

            .info-content h2 {
                font-size: 1.6rem;
                margin: 0 0 25px;
                color: #333;
            }

            .info-content p {
                margin: 20px 0;
                display: flex;
                align-items: flex-start;
                gap: 12px;
                font-size: 1.05rem;
            }

            .info-content i {
                font-size: 1.4rem;
                color: #651FFF;
                margin-top: 4px;
            }

        .contact-form {
            flex: 1;
            padding: 40px;
            background: white;
            border-radius: 16px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.07);
        }

        .form-row {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
        }

        .form-group {
            flex: 1;
        }

            .form-group label {
                display: block;
                margin-bottom: 8px;
                font-weight: 600;
                color: #444;
                font-size: 0.95rem;
            }

        .form-control {
            width: 100%;
            padding: 12px 14px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 15px;
        }

        textarea.form-control {
            min-height: 120px;
            resize: vertical;
        }

        .subject-options {
            display: flex;
            flex-wrap: wrap;
            gap: 16px;
            margin: 8px 0 18px;
        }

        .subject-option {
            display: flex;
            align-items: center;
            gap: 6px;
            font-weight: 500;
        }

            .subject-option input[type="radio"] {
                accent-color: #651FFF;
            }

        .btn-send {
            background: #000;
            color: white;
            border: none;
            padding: 14px 32px;
            font-size: 16px;
            font-weight: 600;
            border-radius: 8px;
            cursor: pointer;
        }

            .btn-send:hover {
                background: #333;
            }

        .alert-success {
            background: #e6f4ea;
            color: #137333;
            padding: 16px;
            border-radius: 8px;
            margin-bottom: 25px;
            text-align: center;
            border: 1px solid #86e69d;
        }

        .text-danger {
            color: #d32f2f;
            font-size: 0.875rem;
            margin-top: 4px;
            display: block;
        }

        @@media (max-width: 992px) {
            .contact-container {
                flex-direction: column;
            }

            .form-row {
                flex-direction: column;
                gap: 0;
            }
        }
    </style>
</head>
<body>

    <!-- NAVIGATION BAR -->
    <nav class="navbar">
        <div class="logo">
            <a href="/#overview">
                <img src="~/images/logo design.png" alt="HyMall Logo" />
            </a>
        </div>
        <ul class="nav-links">
            <li><a href="/#overview">Overview</a></li>
            <li><a href="/#features">Features</a></li>
            <li><a href="/#about">About HyMall</a></li>
            <li><a href="/#demo">Demo</a></li>
            <li><a href="/#faq">FAQ</a></li>
        </ul>
        <div class="login-btn">
            <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Login">LOGIN</a>
        </div>
    </nav>

    <!-- CONTACT CONTENT -->
    <div class="contact-page">
        <div class="contact-container">
            <div class="contact-info">
                <div class="info-content">
                    <h2>Contact Information</h2>
                    <p><i>📞</i> +27 3456 564 55</p>
                    <p><i>✉️</i> demo@gmail.com</p>
                    <p><i>📍</i> 132 Dartmouth Street Boston, Johannesburg, 2090, South Africa</p>
                </div>
            </div>

            <div class="contact-form">
                @if (TempData["Success"] != null)
                {
                    <div class="alert-success">@TempData["Success"]</div>
                }

                <form asp-action="Index" method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="FirstName">First Name *</label>
                            <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName">Last Name *</label>
                            <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="Email">Email *</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Phone">Phone Number</label>
                            <input asp-for="Phone" class="form-control" placeholder="Phone Number" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Subject">Select Subject? *</label>
                        <div class="subject-options">
                            <label class="subject-option">
                                <input type="radio" asp-for="Subject" value="General Inquiry" checked /> General Inquiry
                            </label>
                            <label class="subject-option">
                                <input type="radio" asp-for="Subject" value="Demo Account" /> Demo Account
                            </label>
                            <label class="subject-option">
                                <input type="radio" asp-for="Subject" value="Subscription Options" /> Subscription Options
                            </label>
                            <label class="subject-option">
                                <input type="radio" asp-for="Subject" value="Features" /> Features
                            </label>
                        </div>
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Message">Message *</label>
                        <textarea asp-for="Message" class="form-control" placeholder="Write your message..."></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn-send">Send Message</button>
                </form>
            </div>
        </div>
    </div>

    <!-- FOOTER -->
    <footer class="main-footer">
        <div class="footer-content">
            <div class="footer-links">
                <div class="link-column">
                    <h4>QUICK LINKS</h4>
                    <ul>
                        <li><a href="/#about">About HyMall</a></li>
                        <li><a href="/#features">Features</a></li>
                        <li><a href="/#demo">Demo</a></li>
                    </ul>
                </div>
                <div class="link-column">
                    <h4>RESOURCES</h4>
                    <ul>
                        <li><a href="/#faq">FAQ's</a></li>
                        <li><a href="/Contact">Contact Us</a></li>
                    </ul>
                </div>
                <div class="link-column">
                    <h4>LEGAL</h4>
                    <ul>
                        <li><span>Privacy</span></li>
                        <li><span>Terms</span></li>
                        <li><span>Status</span></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <p>HyMall Ltd © 2025<br />All Rights Reserved</p>
        </div>
    </footer>

    <script src="~/js/site.js"></script>
</body>
</html>