@model IEnumerable<HyMall_App.Models.ProductShortageReport>
@{
    ViewData["Title"] = "Product Shortages";
    Layout = "_TenantLayout";
}

<div style="max-width: 1200px; margin: 0 auto; padding: 20px;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px;">
        <h2 style="display: flex; align-items: center; gap: 10px; margin: 0;">⚠️ Reported Product Shortages</h2>
        <a href="/Tenant/ProductShortageReport" class="btn btn-primary" style="
            padding: 10px 20px;
            background: linear-gradient(90deg, #FF6B6B, #FF8E53);
            color: white;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            transition: background 0.2s;
        ">➕ Report New Shortage</a>
    </div>

    <div style="background: white; padding: 20px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.05);">
        <div style="overflow-x: auto;">
            <table style="width: 100%; border-collapse: collapse;">
                <thead>
                    <tr style="background: #fff5f5;">
                        <th style="padding: 12px 16px; text-align: left; font-weight: 600; color: #333; border-bottom: 2px solid #fed7d7;">Product Name</th>
                        <th style="padding: 12px 16px; text-align: left; font-weight: 600; color: #333; border-bottom: 2px solid #fed7d7;">Quantity Remaining</th>
                        <th style="padding: 12px 16px; text-align: left; font-weight: 600; color: #333; border-bottom: 2px solid #fed7d7;">Shortage Reason</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var shortage in Model)
                        {
                            <tr style="border-bottom: 1px solid #fed7d7;">
                                <td style="padding: 12px 16px; color: #333; font-weight: 500;">@shortage.ProductName</td>
                                <td style="padding: 12px 16px; color: #e53e3e; font-weight: 600;">@shortage.QuantityRemaining</td>
                                <td style="padding: 12px 16px; color: #333;">@shortage.ShortageReason</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" style="padding: 40px 16px; text-align: center; color: #6c757d; font-style: italic;">
                                No shortages reported yet.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div style="display: flex; justify-content: flex-start; gap: 10px; margin-top: 30px;">
            <a href="/Tenant/Dashboard" class="btn btn-secondary" style="
                padding: 10px 20px;
                background: #fff;
                color: #333;
                border: 1px solid #ddd;
                border-radius: 8px;
                font-weight: 600;
                text-decoration: none;
                transition: all 0.2s;
            ">⬅ Back to Dashboard</a>
        </div>
    </div>
</div>