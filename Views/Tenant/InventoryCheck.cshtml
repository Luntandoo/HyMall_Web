@model HyMall_App.Models.InventoryCheck
@{
    ViewData["Title"] = "Inventory Check";
    Layout = "_TenantLayout";
}

<div style="max-width: 800px; margin: 0 auto; padding: 20px;">
    <h2>Inventory Check</h2>

    <div style="background: white; padding: 20px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.05);">
        <form asp-action="Inventory Check" method="post">
            <!-- Product Name -->
            <div style="margin-bottom: 20px;">
                <label asp-for="ProductName" style="display: block; margin-bottom: 8px; font-weight: 600; color: #333;">Product Name</label>
                <input asp-for="ProductName" class="form-control" placeholder="Enter product name" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; background: #f9f9f9; font-size: 1rem;" />
                <span asp-validation-for="ProductName" class="text-danger" style="font-size: 0.875rem; display: block; margin-top: 4px;"></span>
            </div>

            <!-- Current Quantity + Restocked Quantity -->
            <div style="display: flex; gap: 20px; margin-bottom: 20px; flex-wrap: wrap;">
                <div style="flex: 1; min-width: 300px;">
                    <label asp-for="CurrentQuantity" style="display: block; margin-bottom: 8px; font-weight: 600; color: #333;">Current Quantity</label>
                    <input asp-for="CurrentQuantity" type="number" class="form-control" placeholder="Enter current quantity" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; background: #f9f9f9; font-size: 1rem;" />
                    <span asp-validation-for="CurrentQuantity" class="text-danger" style="font-size: 0.875rem; display: block; margin-top: 4px;"></span>
                </div>
                <div style="flex: 1; min-width: 300px;">
                    <label asp-for="RestockedQuantity" style="display: block; margin-bottom: 8px; font-weight: 600; color: #333;">Restocked Quantity</label>
                    <input asp-for="RestockedQuantity" type="number" class="form-control" placeholder="Enter restocked quantity" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; background: #f9f9f9; font-size: 1rem;" />
                    <span asp-validation-for="RestockedQuantity" class="text-danger" style="font-size: 0.875rem; display: block; margin-top: 4px;"></span>
                </div>
            </div>

            <!-- Notes -->
            <div style="margin-bottom: 20px;">
                <label asp-for="Notes" style="display: block; margin-bottom: 8px; font-weight: 600; color: #333;">Notes</label>
                <textarea asp-for="Notes" class="form-control" placeholder="Enter any notes" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; background: #f9f9f9; font-size: 1rem; min-height: 100px; resize: vertical;"></textarea>
                <span asp-validation-for="Notes" class="text-danger" style="font-size: 0.875rem; display: block; margin-top: 4px;"></span>
            </div>

            <!-- Submit Button -->
            <div style="display: flex; justify-content: flex-end; gap: 10px; margin-top: 30px;">
                <button type="submit" class="btn btn-primary" style="
                    padding: 10px 20px;
                    background: linear-gradient(90deg, #651FFF, #3382FF);
                    color: white;
                    border: none;
                    border-radius: 8px;
                    font-weight: 600;
                    cursor: pointer;
                    transition: background 0.2s;
                ">
                    Submit
                </button>
            </div>
        </form>
    </div>
</div>

