<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HyMall_App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Logo -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo design.png" alt="HyMall Logo" style="height:40px;" />
                </a>

                <!-- Hamburger -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                

                    <!-- Login / Register -->
                    <div class="d-flex">
                        <a class="btn btn-outline-primary me-2" asp-area="Identity" asp-page="/Account/Login">Login</a>
                        <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">Register</a>
                    </div>
                </div>
           
        </nav>
    </header>

    <div class="container-fluid p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="main-footer">
        <div class="footer-content">
            <div class="footer-links">
                <div class="link-column">
                    <h4>QUICK LINKS</h4>
                    <ul>
                        <li><a href="@Url.Action("Index", "Home")#about">About HyMall</a></li>
                        <li><a href="@Url.Action("Index", "Home")#features">Features</a></li>
                        <li><a href="@Url.Action("Index", "Home")#demo">Demo</a></li>
                    </ul>
                </div>
                <div class="link-column">
                    <h4>RESOURCES</h4>
                    <ul>
                        <li><a href="@Url.Action("Index", "Home")#faq">FAQ's</a></li>
                        <li><a href="/Contact">Contact Us</a></li>
                    </ul>
                </div>
                <div class="link-column">
                    <h4>LEGAL</h4>
                    <ul>
                        <li><span>Privacy</span></li>
                        <li><span>Terms</span></li>
                        <li><span>Status</span></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <p>HyMall Ltd @@ 2025<br />All Rights Reserved</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
