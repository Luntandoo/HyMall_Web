@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tenant</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .tenant-layout {
            display: flex;
            min-height: 100vh;
            background-color: #f8f9ff;
        }

        /* Sidebar */
        .tenant-sidebar {
            width: 260px;
            background: white;
            padding: 20px 0;
            box-shadow: 0 0 12px rgba(0,0,0,0.05);
            position: fixed;
            height: 100%;
            overflow-y: auto;
            z-index: 9999;
        }

        .tenant-logo {
            text-align: center;
            padding: 20px 0;
            border-bottom: 1px solid #eee;
            margin-bottom: 20px;
        }

            .tenant-logo img {
                height: 40px;
            }

        .tenant-nav {
            list-style: none;
            padding: 0 15px;
            margin: 0;
        }

            .tenant-nav li {
                margin-bottom: 8px;
            }

            .tenant-nav a {
                color: #333;
                text-decoration: none;
                padding: 12px 16px;
                border-radius: 8px;
                display: block;
                font-weight: 500;
                transition: all 0.2s;
                display: flex;
                align-items: center;
                gap: 10px;
            }

                .tenant-nav a:hover,
                .tenant-nav a.active {
                    background: #e6f3ff;
                    color: #0078ff;
                }

        .tenant-main {
            flex: 1;
            padding: 20px 20px 20px 300px;
        }

        .tenant-header h1 {
            font-size: 2.2rem;
            font-weight: 800;
            color: #0b0b0b;
        }
    </style>
</head>
<body>
    <div class="tenant-layout">
        <aside class="tenant-sidebar">
            <div class="tenant-logo">
                <img src="~/images/logo design.png" alt="Tenant Logo" />
            </div>
            <ul class="tenant-nav">
                <li><a href="/Tenant/Dashboard" class="active">🏠 Dashboard</a></li>
                <li><a href="/Tenant/Announcement">📢 Create Announcement</a></li>
                <li><a href="/Tenant/Promotion">💸 Promotions</a></li>
                <li><a href="/Tenant/ProductShortageReport">⚠️ Shortages</a></li>
                <li><a href="/Tenant/ShopDetail">🏪 Shop Details</a></li>
                <li><a href="/Tenant/CreateEvent">🎉 Submit Event</a></li>
                <li><a href="/Tenant/CustomerFeedback"> Customer Feedback</a></li>
            </ul>

            <div style="padding: 0 15px; margin-top: auto;">
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post">
                    <button type="submit" style="
                        width: 100%;
                        padding: 12px;
                        background: linear-gradient(90deg, #651FFF, #3382FF);
                        color: white;
                        border: none;
                        border-radius: 8px;
                        font-weight: 600;
                        cursor: pointer;
                        text-align: center;
                        transition: background 0.2s;
                    ">
                        LOGOUT
                    </button>
                </form>
            </div>
        </aside>

        <main class="tenant-main">
            @RenderBody()
        </main>
    </div>

    @RenderSection("Scripts", required: false)

</body>
</html>
