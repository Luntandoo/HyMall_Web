@model HyMall_App.Models.AdminSettings
@{
    ViewData["Title"] = "Admin Settings";
    Layout = "_AdminLayout";
}

<div style="max-width: 800px; margin: 0 auto; padding: 20px;">
    <h2>Setting Details</h2>

    <!-- Contact Note -->
    <div style="background: #fff3cd; padding: 15px; border-radius: 8px; border: 1px solid #ffeaa7; margin-bottom: 20px;">
        <p style="margin: 0; color: #856404; font-weight: 500;">
            <strong>Note:</strong> In the event admin users are changed, please contact
            <a href="mailto:hymall@itsupport.com" style="color: #007bff; text-decoration: none;">hymall@itsupport.com</a>
            to update the following information.
        </p>
    </div>

    <div style="background: white; padding: 20px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.05);">
        <h4>Personal information</h4>

        <form>
            <!-- Full Name + Last Name -->
            <div style="display: flex; gap: 20px; margin-bottom: 20px; flex-wrap: wrap;">
                <div style="flex: 1; min-width: 300px;">
                    <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #333;">Full Name</label>
                    <input value="Admin" class="form-control" placeholder="Enter first name" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; background: #f9f9f9; font-size: 1rem;" readonly />
                </div>
                <div style="flex: 1; min-width: 300px;">
                    <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #333;">Last Name</label>
                    <input value="User" class="form-control" placeholder="Enter last name" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; background: #f9f9f9; font-size: 1rem;" readonly />
                </div>
            </div>

            <!-- Email + Username -->
            <div style="display: flex; gap: 20px; margin-bottom: 20px; flex-wrap: wrap;">
                <div style="flex: 1; min-width: 300px;">
                    <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #333;">Email Address</label>
                    <input value="admin@hymall.co.za" class="form-control" placeholder="Enter email address" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; background: #f9f9f9; font-size: 1rem;" readonly />
                </div>
                <div style="flex: 1; min-width: 300px;">
                    <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #333;">Username</label>
                    <input value="admin_hymall" class="form-control" placeholder="Enter user name" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; background: #f9f9f9; font-size: 1rem;" readonly />
                </div>
            </div>

            <!-- Phone + City -->
            <div style="display: flex; gap: 20px; margin-bottom: 20px; flex-wrap: wrap;">
                <div style="flex: 1; min-width: 300px;">
                    <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #333;">Phone No</label>
                    <input value="+27 11 123 4567" class="form-control" placeholder="Enter phone no" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; background: #f9f9f9; font-size: 1rem;" readonly />
                </div>
                <div style="flex: 1; min-width: 300px;">
                    <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #333;">City</label>
                    <input value="Johannesburg" class="form-control" placeholder="Enter your city" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; background: #f9f9f9; font-size: 1rem;" readonly />
                </div>
            </div>

            <!-- Country + Zip Code -->
            <div style="display: flex; gap: 20px; margin-bottom: 20px; flex-wrap: wrap;">
                <div style="flex: 1; min-width: 300px;">
                    <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #333;">Country Name</label>
                    <input value="South Africa" class="form-control" placeholder="Enter country name" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; background: #f9f9f9; font-size: 1rem;" readonly />
                </div>
                <div style="flex: 1; min-width: 300px;">
                    <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #333;">Zip code</label>
                    <input value="2001" class="form-control" placeholder="Enter zip code" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 8px; background: #f9f9f9; font-size: 1rem;" readonly />
                </div>
            </div>


            <!-- Cancel Button Only -->
            <div style="display: flex; justify-content: flex-end; gap: 10px; margin-top: 30px;">
                <a href="/Admin/Dashboard" class="btn btn-secondary" style="
                    padding: 10px 20px;
                    background: #fff;
                    color: #333;
                    border: 1px solid #ddd;
                    border-radius: 8px;
                    font-weight: 600;
                    text-decoration: none;
                    transition: all 0.2s;
                ">Back to Dashboard</a>
            </div>
        </form>
    </div>
</div>