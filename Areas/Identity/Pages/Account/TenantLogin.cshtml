@page
@model HyMall_App.Areas.Identity.Pages.Account.TenantLoginModel
@{
    ViewData["Title"] = "Tenant Login";
    
      }

      <!DOCTYPE html>
      <html lang="en">
      <head>
          <meta charset="utf-8" />
          <meta name="viewport" content="width=device-width, initial-scale=1" />
          <title>@ViewData["TenantLogin"]</title>

          <link rel="stylesheet" href="~/css/site.css" />

          <style>
              
            
              .tenant-login-page {
                  min-height: calc(100vh - 74px); 
                  display: flex;
                  align-items: center;
                  justify-content: center;
                  padding: 2rem 1rem;
                  box-sizing: border-box;
                  background: linear-gradient(135deg, #f3f4f6 0%, #e6f0fb 100%);
              }

                  
                  .tenant-login-page .site-hero,
                  .tenant-login-page .hero,
                  .tenant-login-page .features,
                  .tenant-login-page .large-hero {
                      display: none !important;
                  }

              
              .login-wrapper {
                  width: 100%;
                  max-width: 480px;
                  margin: 0 auto;
                  display: flex;
                  flex-direction: column;
                  align-items: stretch;
                  gap: 1.25rem;
                  z-index: 5;
              }

             
              .login-card {
                  background: #fff;
                  padding: 2.25rem;
                  border-radius: 50px;
                  box-shadow: 0 8px 30px rgba(2,6,23,0.06);
                  border: 1px solid rgba(0,0,0,0.03);
              }

                  .login-card h1 {
                      margin: 0 0 1rem;
                      font-size: 1.9rem;
                      font-weight: 800;
                      text-align: left;
                  }

              .form-group {
                  margin-bottom: 1rem;
              }

                  .form-group label {
                      font-weight: 600;
                      display: block;
                      margin-bottom: 6px;
                      color: #333;
                  }

              .form-control {
                  width: 100%;
                  padding: 0.8rem 1rem;
                  border: 1px solid #e6e6e6;
                  border-radius: 10px;
                  font-size: 1rem;
                  background: #fff;
                  box-sizing: border-box;
              }

              .btn-login {
                  width: 100%;
                  padding: 0.85rem;
                  background: linear-gradient(90deg, var(--primary-start, #222), var(--primary-end, #555));
                  color: white;
                  border: none;
                  border-radius: 999px;
                  font-weight: 700;
                  letter-spacing: .6px;
                  cursor: pointer;
              }

              .login-aux {
                  text-align: center;
                  color: #444;
                  font-size: 0.95rem;
              }

                  .login-aux a {
                      color: var(--primary-start, #7c3aed);
                      text-decoration: none;
                      font-weight: 700;
                      margin-left: 6px;
                  }

             
              .tenant-login-footer {
                  width: 100%;
                  max-width: 960px;
                  margin: 0 auto;
                  padding: 1.25rem;
                  box-sizing: border-box;
                  color: #666;
                  text-align: center;
              }

            
              @@media (max-width: 600px) {
                  .tenant-login-page

              {
                  padding: 1.25rem;
                  min-height: calc(100vh - 64px);
              }

              .login-card {
                  padding: 1.25rem;
                  border-radius: 12px;
              }

                  .login-card h1 {
                      font-size: 1.5rem;
                  }

              }
          </style>
      </head>
      <body>
          
          <main class="tenant-login-page">
              <div class="login-wrapper">
                  <div class="login-card">
                      <h1>Tenant Login</h1>

                      <form method="post" novalidate>
                          <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                          <div class="form-group">
                              <label asp-for="Input.Email">Email</label>
                              <input asp-for="Input.Email" class="form-control" placeholder="Email Address" />
                              <span asp-validation-for="Input.Email" class="text-danger"></span>
                          </div>

                          <div class="form-group">
                              <label asp-for="Input.Password">Password</label>
                              <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" />
                              <span asp-validation-for="Input.Password" class="text-danger"></span>
                          </div>

                          <button type="submit" class="btn-login">LOGIN</button>
                      </form>
                  </div>

                  <div class="login-aux">
                      Don’t have an account?<a asp-page="/Account/Register"> Sign up here</a>
                  </div>
              </div>
          </main>

          <footer class="tenant-login-footer">
              © 2025 HyMall Ltd. · <a href="/#features">Features</a> · <a href="/#about">About</a> · <a href="/#contact">Contact</a>
          </footer>

          @await Html.PartialAsync("_ValidationScriptsPartial")
      </body>
      </html>



